<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003555"
    tools:context=".ForgetPassword">
    <ImageButton
        android:id="@+id/backForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="@android:color/transparent"
        android:layout_marginRight="100dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@id/imageView"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo1" />
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageView"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="2dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/fieldstyle">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_person_24" />

        <EditText
            android:id="@+id/editTextEmailForget"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_marginRight="10dp"
            android:textColorHint="#FDFEFE"
            android:textColor="#FDFEFE"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageView2"/>
    </RelativeLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Reset Password"
        android:textSize="25dp"
        android:textColor="#FEFDFE"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"
        android:layout_below="@id/layout1"/>

    <ProgressBar
        android:id="@+id/progressBarReset"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout1" />

</RelativeLayout>